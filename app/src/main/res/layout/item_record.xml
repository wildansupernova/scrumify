<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Sprint Planning"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                android:textColor="@color/colorSecondaryTextDefaultMaterialLight" />

            <TextView
                android:id="@+id/record_recorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Recorded By: Muhammad Farhan"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryTextDefaultMaterialLight" />

        </LinearLayout>

        <Button
            android:id="@+id/record_stop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/button_round"
            android:minWidth="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="S"
            android:textColor="@color/colorPrimaryTextDefaultMaterialLight" />

        <Button
            android:id="@+id/record_start"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/button_round"
            android:minWidth="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="S"
            android:textColor="@color/colorPrimaryTextDefaultMaterialLight" />

        <Button
            android:id="@+id/record_resume"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/button_round"
            android:minWidth="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="R"
            android:textColor="@color/colorPrimaryTextDefaultMaterialLight" />

        <Button
            android:id="@+id/record_info"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/button_round"
            android:minWidth="0dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="i"
            android:textColor="@color/colorPrimaryTextDefaultMaterialLight" />

    </LinearLayout>

</android.support.v7.widget.CardView>